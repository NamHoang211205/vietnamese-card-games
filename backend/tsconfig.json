{
  "compilerOptions": {
    "target": "es2022", // or higher, e.g., "esnext"
    "module": "esnext", // or "node16", "nodenext", etc.
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
